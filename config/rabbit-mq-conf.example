# ----------------------------------------------------------------
# RABBITMQ SHOULD BE RUN UNDER SSL SCOPE
# NOTE FOR DEVELOPER: YOU CAN FOLLOW THIS TUTORIAL FOR TESTING 
# PURPOSES - https://www.rabbitmq.com/ssl.html
# ----------------------------------------------------------------

# Disabte non SSL connection
listeners.tcp = none

# Enable AMQPS
listeners.ssl.default            = 1234
ssl_options.cacertfile           = /etc/rabbitmq/cer/ca_certificate.pem
ssl_options.certfile             = /etc/rabbitmq/cer/server_certificate.pem
ssl_options.keyfile              = /etc/rabbitmq/cer/server_key.pem
ssl_options.verify               = verify_peer
ssl_options.fail_if_no_peer_cert = true
ssl_options.password             = a-super-strong-password
